extends ./layouts/main.pug
block content
  main.mt-5
    div.container
      //-Section diary
      section#diary.text-center
        //-Heading
        h2.mb-5.font-weight-bold Agenda
        //-Grid row
        div.row
          //-Grid column
          div.col-md-6
            //-Carousel
            div#carousel-diary.carousel.slide(data-ride="carousel") 
              //-Indicators
              ul.carousel-indicators
                li.active(data-target="#carousel-diary" data-slide-to="0")
                li(data-target="#carousel-diary" data-slide-to="1")
                li(data-target="#carousel-diary" data-slide-to="2")
              //-Slides
              div.carousel-inner.z-depth-1-half(role="listbox")
                div.carousel-item.active
                  img.d-block.w-100(src="/img/005.jpeg" alt="First slide")
                div.carousel-item
                  img.d-block.w-100(src="/img/006.jpeg" alt="Second slide")
                div.carousel-item
                  img.d-block.w-100(src="/img/007.jpeg" alt="Third slide")
              //-Controls
              a.carousel-control-prev(href="#carousel-diary" role="button" data-slide="prev")
                img(src="/img/svg/ic_keyboard_arrow_left_black_24px.svg")
              a.carousel-control-next(href="#carousel-diary" role="button" data-slide="next")
                img(src="/img/svg/ic_keyboard_arrow_right_black_24px.svg")
          div.col-md-6
